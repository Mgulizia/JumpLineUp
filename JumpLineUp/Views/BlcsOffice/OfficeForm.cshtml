@model JumpLineUp.Models.BlcsOffice
@{
    var title = (Model.Id == 0) ? "New Blcs Office" : "Edit BLCS Office";
    var buttonTxt = (Model.Id == 0) ? "Save New Office" : "Update Office";
    ViewBag.Title = "OfficeForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@using (Html.BeginForm("Save", "BlcsOffice"))
{

    <div class="panel panel-default">

        <div class="panel-heading">

            <h2>@title</h2>

        </div><!--Panel Heading End-->

        <div class="panel-body">


            <div class="form-group">
                @Html.LabelFor(m => m.LocationDescription)
                @Html.TextBoxFor(m => m.LocationDescription, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LocationDescription)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Street1)
                @Html.TextBoxFor(m => m.Street1, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Street1)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Street2)
                @Html.TextBoxFor(m => m.Street2, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Street2)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.City)
                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.City)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.State)
                @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.State)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Zip)
                @Html.TextBoxFor(m => m.Zip, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Zip)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Phone)
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Phone)
            </div>
        
            <label>
                @Html.CheckBoxFor(m => m.IsEnabled) Current Office
            </label>
            
            @Html.HiddenFor(m => m.Id)

        </div><!--Panel Body End-->
        <div class="panel-footer">

            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary">@buttonTxt</button>

        </div><!--Panel Footer End-->
    </div><!--Panel End-->
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}