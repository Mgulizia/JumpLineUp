@using System.Web.UI.WebControls
@using JumpLineUp.Helpers
@using JumpLineUp.Models
@model JumpLineUp.Models.CfsWorker
@{
    ViewBag.Title = "CFS Worker View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />


    <div class="panel panel-default">

        <div class="panel-heading">
            <h3>@Model.FirstName @Model.LastName</h3>
            CFS Worker Information
        </div><!--Panel Heading End--> 

        <div class="panel-body">

       
            <div class="well">

                <div class="row">

                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Telephone Number</label>
                            <p><a href="tel:@Model.Phone">@Phone.DisplayPhone(Model.Phone)</a></p>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="form-group">
                            <label>Email Address</label>
                            <p><a href="mailto:@Model.Email">@Model.Email</a></p>
                        </div>
                    </div>

               </div>

                <hr/>

                <div class="row">

                    <div class="col-md-12">
                        
                        <div class="form-group">
                            <label>Office Location</label>
                            <p>@Model.OfficeLocation</p>
                        </div>

                        <div class="form-group">
                            <label>Status</label>
                            <p>
                                @if (Model.IsActive)
                                {
                                    <span class="label label-success">Active</span>
                                    }
                                else
                                {
                                    <span class="label label-default">Disabled</span>
                                }
                            </p>
                        </div>

                    </div>
                    
                        
                  

                   
                </div>

            </div>

        </div><!--Panel Body End-->
        <div class="panel-footer">
            <input type="button" class="btn btn-primary" value="Back" onclick="window.history.back()" />
            @if (User.IsInRole(RoleName.CanManageCfsWorkers))
            {
                @Html.ActionLink("Edit Cfs Worker","EditCfsWorker","CfsWorker",new{id = Model.Id } , new{@class="btn btn-primary"})
            }
            


        </div>
    </div><!--Panel End-->


@section scripts{


}

